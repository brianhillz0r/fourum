{
	"name": "fourum/fourum",
	"description": "Forum software, built responsibly.",
	"keywords": ["fourum", "forum"],
	"license": "MIT",
	"type": "project",

	"repositories": [
	  { "type": "git", "url": "git@github.com:fourum/message.git" },
	  { "type": "git", "url": "git@github.com:fourum/support.git" }
	],

	"require": {
		"laravel/framework": "5.0.*",
		"baum/baum": "~1.0",
		"respect/validation": "0.8.*",
		"leafo/lessphp": "0.5.*",
		"illuminate/html": "~5.0",
		"thomaswelton/gravatarlib": "0.1.*",
		"fourum/message": "dev-master",
	  	"fourum/support": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Fourum\\": "app/"
		},
	  	"files": [
		  	"app/Helpers/helpers.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
